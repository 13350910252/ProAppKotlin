<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <com.baidu.mapapi.map.MapView
        android:id="@+id/bmapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:id="@+id/ll_search_content"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/header"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_4dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:background="@drawable/shape_white_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_14dp"
            android:src="@mipmap/weizhi" />

        <EditText
            android:id="@+id/et_serch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="输入详细位置"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="@color/_333"
            android:textColorHint="@color/_999"
            android:textSize="14sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/_20dp"
            android:background="@color/f0f0f0" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="@dimen/_13dp"
            android:paddingEnd="@dimen/_20dp"
            android:text="搜索"
            android:textColor="@color/ff4d4d"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>