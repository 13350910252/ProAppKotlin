<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fafafa"
    android:orientation="vertical">

    <include
        android:id="@+id/header"
        layout="@layout/layout_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:text="由于香港澳门过小，不方便点击，就没有做效果了"
        android:textColor="@color/_333"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold" />

    <com.yinp.proappkotlin.recreation.MapView
        android:id="@+id/mv_main"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_20dp"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_marginEnd="@dimen/_20dp" />

    <com.yinp.tools.shap_view.ShapeTextView
        android:id="@+id/stv_restart"
        android:layout_width="@dimen/_100dp"
        android:layout_height="@dimen/_40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="重开"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16sp"
        app:stvOneBg="@color/ff4d4d"
        app:stvRadius="5"
        app:stvState="pressed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tv_bg_red" />

        <TextView
            android:id="@+id/tv_yellow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tv_bg_yellow" />

        <TextView
            android:id="@+id/tv_blue"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tv_bg_blue" />

        <TextView
            android:id="@+id/tv_green"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tv_bg_green" />

        <TextView
            android:id="@+id/tv_white"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tv_bg_white" />
    </LinearLayout>
</LinearLayout>