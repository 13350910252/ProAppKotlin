<?xml version="1.0" encoding="utf-8"?>
<com.yinp.tools.shap_view.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:lt_radius="10"
    app:oneBg="@color/white"
    app:rt_radius="10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_left"
            android:padding="@dimen/_12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_4dp"
            android:text="取消"
            android:textColor="@color/_333"
            android:textSize="@dimen/textSize_18sp" />

        <TextView
            android:padding="@dimen/_12dp"
            android:id="@+id/tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/_333"
            android:textSize="@dimen/textSize_20sp"
            android:textStyle="bold" />

        <TextView
            android:padding="@dimen/_12dp"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_4dp"
            android:text="确定"
            android:textColor="@color/ff4d4d"
            android:textSize="@dimen/textSize_18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <com.yinp.tools.view.CustomScrollView
        android:id="@+id/csv_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.yinp.tools.shap_view.ShapeLinearLayout>