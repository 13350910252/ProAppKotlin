<?xml version="1.0" encoding="utf-8"?>
<com.yinp.tools.shap_view.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/_14dp"
    android:paddingTop="@dimen/_8dp"
    android:paddingEnd="@dimen/_14dp"
    android:paddingBottom="@dimen/_8dp"
    app:oneBg="@color/white"
    app:state="pressed">

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_333"
            android:textSize="@dimen/textSize_16sp"
            tools:text="青年城" />

        <TextView
            android:id="@+id/tv_address_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:textColor="@color/_666"
            android:textSize="@dimen/textSize_12sp"
            tools:text="双流区锦韵路533号" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6dp"
        android:text="路线"
        android:textColor="@color/_666"
        android:textSize="@dimen/textSize_12sp"
        app:drawableTopCompat="@mipmap/baidu_path" />
</com.yinp.tools.shap_view.ShapeLinearLayout>