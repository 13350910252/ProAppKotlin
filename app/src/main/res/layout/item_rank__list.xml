<?xml version="1.0" encoding="utf-8"?>
<com.yinp.proapp.view.RankLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_52dp"
    android:orientation="horizontal"
    app:bgColor="@color/f8c7c4">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:background="@mipmap/ic_rank_1"
            android:id="@+id/tv_ranking"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_ranking_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/ff4d4d"
            android:textSize="@dimen/textSize_14sp"
            tools:text="4" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/_10dp"
        android:gravity="center_vertical"
        android:textColor="@color/_333"
        android:textSize="@dimen/textSize_14sp"
        tools:text="张三" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/_14dp"
        android:gravity="center_vertical"
        android:textColor="@color/ff4d4d"
        android:textSize="@dimen/textSize_14sp"
        tools:text="42444" />
</com.yinp.proapp.view.RankLinearLayout>