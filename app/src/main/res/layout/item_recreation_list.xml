<?xml version="1.0" encoding="utf-8"?>
<com.yinp.tools.shap_view.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_14dp"
    android:orientation="vertical"
    android:paddingStart="@dimen/_14dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingEnd="@dimen/_14dp"
    android:paddingBottom="@dimen/_16dp"
    app:sllOneBg="@color/white"
    app:sllRadius="5"
    app:sllState="pressed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_48dp"
            android:layout_height="@dimen/_48dp"
            android:background="@color/ff4d4d" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginTop="@dimen/_12dp"
            android:textColor="@color/_333"
            android:textSize="@dimen/textSize_16sp"
            android:textStyle="bold"
            tools:text="贪吃蛇" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:textColor="@color/_333"
        android:textSize="@dimen/textSize_16sp"
        tools:text="我是娱乐介绍" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp"
        android:orientation="horizontal">

        <com.yinp.tools.shap_view.ShapeTextView
            android:id="@+id/stv_start"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开始游戏"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16sp"
            app:stvOneBg="@color/ff4d4d"
            app:stvRadius="10"
            app:stvState="pressed" />

        <com.yinp.tools.shap_view.ShapeTextView
            android:id="@+id/stv_record"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginStart="@dimen/_14dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="游戏记录"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16sp"
            app:stvOneBg="@color/ff4d4d"
            app:stvRadius="10"
            app:stvState="pressed" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</com.yinp.tools.shap_view.ShapeLinearLayout>