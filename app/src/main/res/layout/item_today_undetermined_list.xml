<?xml version="1.0" encoding="utf-8"?>
<com.yinp.tools.shap_view.ShapeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_14dp"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_14dp"
    android:orientation="vertical"
    app:oneBg="@color/white"
    app:radius="10"
    app:state="pressed">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:textColor="@color/_333"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="标题" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:textColor="@color/_333"
        android:textSize="@dimen/textSize_16sp"
        android:textStyle="bold"
        tools:text="今天做一百个俯卧撑" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/_14dp"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_14dp"
        android:background="@color/f0f0f0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_16dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_14dp"
            android:background="@drawable/shape_stroke_5_ff4d4d_05"
            android:gravity="center"
            android:paddingStart="@dimen/_8dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingEnd="@dimen/_8dp"
            android:paddingBottom="@dimen/_2dp"
            android:text="删除"
            android:textColor="@color/ff4d4d"
            android:textSize="@dimen/textSize_16sp" />

        <com.yinp.tools.shap_view.ShapeTextView
            android:id="@+id/stv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_14dp"
            android:gravity="center"
            android:paddingStart="@dimen/_8dp"
            android:paddingTop="@dimen/_2dp"
            android:paddingEnd="@dimen/_8dp"
            android:paddingBottom="@dimen/_2dp"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_16sp"
            app:oneBg="@color/ff4d4d"
            app:radius="5"
            app:state="pressed" />
    </LinearLayout>
</com.yinp.tools.shap_view.ShapeLinearLayout>